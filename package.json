{
  "name": "server",
  "version": "1.0.0",
  "description": "URL Shortner Backend REST Service",
  "main": "index.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node index.js",
    "server": "nodemon index.js --config nodemon.json",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [
    "Node.js",
    "Express",
    "MongoDB"
  ],
  "author": "Tarun Chauhan",
  "license": "ISC",
  "homepage": "https://github.com/tarunrajput/url_shortner#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/tarunrajput/url_shortner.git"
  },
  "bugs": {
    "url": "https://github.com/tarunrajput/url_shortner/issues"
  },
  "dependencies": {
    "concurrently": "^4.1.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.6.6",
    "shortid": "^2.2.14",
    "valid-url": "^1.0.9"
  },
  "engines": {
    "npm": ">=5.5.0",
    "node": ">=9.3.0"
  },
  "devDependencies": {
    "nodemon": "^1.19.1"
  }
}